<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All models
    </h1>

    <a href="/models/new" class="btn btn-block btn-outline-secondary">
      Add a new model
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @models.each do |model| %>
      <tr>
        <td>
          <%= model.id %>
        </td>

        <td>
          <%= model.name %>
        </td>

        <td>
          <%= time_ago_in_words(model.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(model.updated_at) %> ago
        </td>

        <td>
          <a href="/models/<%= model.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
