<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All training runs
    </h1>

    <a href="/training_runs/new" class="btn btn-block btn-outline-secondary">
      Add a new training run
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Model
        </th>

        <th>
          Dataset
        </th>

        <th>
          Iteration
        </th>

        <th>
          Accuracy score
        </th>


        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @training_runs.each do |training_run| %>
      <tr>
        <td>
          <%= training_run.id %>
        </td>

        <td>
          <%= Model.find(training_run.model_id).name %>
        </td>

        <td>
          <%= Dataset.find(training_run.dataset_id).name %>
        </td>

        <td>
          <%= training_run.iteration %>
        </td>

        <td>
          <%= training_run.accuracy_score %>
        </td>

        
        <td>
          <%= time_ago_in_words(training_run.updated_at) %> ago
        </td>

        <td>
          <a href="/training_runs/<%= training_run.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
