<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Training run #<%= @training_run.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/training_runs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/training_runs/<%= @training_run.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit training run
        </a>
      </div>

      <div class="col">
        <a href="/delete_training_run/<%= @training_run.id %>" class="btn btn-block btn-outline-secondary">
          Delete training run
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Model
      </dt>
      <dd>
        <%= @training_run.model_id %>
      </dd>

      <dt>
        Dataset
      </dt>
      <dd>
        <%= @training_run.dataset_id %>
      </dd>

      <dt>
        Iteration
      </dt>
      <dd>
        <%= @training_run.iteration %>
      </dd>

      <dt>
        Accuracy score
      </dt>
      <dd>
        <%= @training_run.accuracy_score %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@training_run.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@training_run.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

