<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All datasets
    </h1>

    <a href="/datasets/new" class="btn btn-block btn-outline-secondary">
      Add a new dataset
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          Name
        </th>

        <th>
          Data type
        </th>

        <th>
          Number rows
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @datasets.each do |dataset| %>
      <tr>
        <td>
          <%= dataset.name %>
        </td>

        <td>
          <%= dataset.data_type %>
        </td>

        <td>
          <%= dataset.number_rows %>
        </td>

        <td>
          <%= time_ago_in_words(dataset.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(dataset.updated_at) %> ago
        </td>

        <td>
          <a href="/datasets/<%= dataset.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
